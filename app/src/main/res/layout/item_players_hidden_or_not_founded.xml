<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container_hide_not_founded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_small_8"
        android:paddingBottom="@dimen/spacing_small_8"
        >
        <ImageView
            android:id="@+id/img_avatar"
            android:src="@drawable/ic_camera"
            android:layout_width="@dimen/avatar_48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_height="@dimen/avatar_48dp"/>

        <TextView
            android:id="@+id/tv_nickname_hide_not_founded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_avatar"
            android:layout_toEndOf="@id/img_avatar"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="@color/primary_text"/>


        <TextView
            android:id="@+id/hide_not_founded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname_hide_not_founded"
            android:layout_alignLeft="@id/tv_nickname_hide_not_founded"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>